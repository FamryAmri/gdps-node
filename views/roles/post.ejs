<%- include('../header.ejs') %>
<% var formname = "Add role" %>
<style>
    .boxsize {
        height: 35px;
        width: 50px;
    }
</style>
<div class="container py-2">
    <h2><%= formname %></h2>
    <div class="container">
        <form method="post" action="/admin/roles">
            <div class="row mb-1">
                <div class="form-group col">
                    <label>Rolename</label>
                    <input type="text" class="form-control" name="name" placeholder="Enter rolename" required>
                </div>
            </div>
            <label for="level">Mod Level</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" value="0" name="level" id="level">
                <label class="form-check-label">0</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" value="1" name="level" id="level" checked>
                <label class="form-check-label">1</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" value="2" name="level" id="level">
                <label class="form-check-label">2</label>
            </div><br>
            <label for="colors">Colors</label>
            <div class="form-group col-1">
                <input type="color" name="colors" class="form-control boxsize" id="colors" value="#ffffff">
            </div>
            <label for="perms">Permissions - Mods</label>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="perms" value="hasMod" checked>
                <label class="form-check-label">hasMod</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="perms" value="banTop">
                <label class="form-check-label">Ban Top</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="perms" value="delComment">
                <label class="form-check-label">Delete Comment</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="perms" value="delLevel">
                <label class="form-check-label">Delete Level</label>
            </div>
            <div class="row mt-1">
                <div class="form-group col-2 col-lg-2">
                    <button class="btn btn-primary" type="submit">Add</button>
                </div>
                <div class="form-group col-5 col-lg-1">
                    <a href="/admin/roles"><button class="btn btn-primary" type="button">Back</button></a>
                </div>
            </div>
        </form>
    </div>
</div>
<%- include('../footer.ejs') %>